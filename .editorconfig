root = true

[*]
indent_style = space
indent_size = 2
tab_width = 8
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{c,h,in,lua}]
max_line_length = 100

[{Makefile,**/Makefile,runtime/doc/*.txt}]
indent_style = tab
indent_size = 8

[*.lua]
quote_style = single
call_arg_parentheses = remove
continuation_indent_size = 2
align_table_field_to_first_field = false
keep_line_after_function_define_statement = minLine:0
